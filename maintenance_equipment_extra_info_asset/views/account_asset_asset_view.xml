<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_account_asset_form_inh_extra_info_asset" model="ir.ui.view">
            <field name="name">view.account.asset.form.inh.extra.info.asset</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_asset_form"/>
            <field name="arch" type="xml">
                <field name="invoice_id" position="after">
                    <field name="invoice_line_id" string="Invoice line" options="{'no_create': True}"/>
                </field>
            </field>
        </record>
        <record id="view_account_asset_purchase_tree_inh_extra_info_asset" model="ir.ui.view">
            <field name="name">view.account.asset.purchase.tree.inh.extra.info.asset</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_asset_purchase_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="invoice_id" />
                </field>
            </field>
        </record>
        <record id="view_account_asset_search_inh_extra_info_asset" model="ir.ui.view">
            <field name="name">view.account.asset.search.inh.extra.info.asset</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_search"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="invoice_id" />
                </field>
                <xpath expr="//group/filter[1]" position="after">
                    <filter name="invoice_id" string="Invoice" domain="[]" context="{'group_by':'invoice_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
