<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_l10n_es_aeat_mod347_partner_record_tree_inh_ext" >
            <field name="name">view.l10n.es.aeat.mod347.partner.record.tree.inh.ext</field>
            <field name="model">l10n.es.aeat.mod347.partner_record</field>
            <field name="inherit_id" ref="l10n_es_aeat_mod347.view_l10n_es_aeat_mod347_partner_record_tree"/>
            <field name="arch" type="xml">
                <field name="real_estate_transmissions_amount" position="after">
                    <field name="state" string="State"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="view_l10n_es_aeat_mod347_partner_record_form_inh_ext" >
            <field name="name">view.l10n.es.aeat.mod347.partner.record.form.inh.ext</field>
            <field name="model">l10n.es.aeat.mod347.partner_record</field>
            <field name="inherit_id" ref="l10n_es_aeat_mod347.view_l10n_es_aeat_mod347_partner_record_form"/>
            <field name="arch" type="xml">
                <notebook position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </notebook>
            </field>
        </record>
        <record model="ir.ui.view" id="view_l10n_es_aeat_mod347_partner_record_search_inh_ext" >
            <field name="name">view.l10n.es.aeat.mod347.partner.record.search.inh.ext</field>
            <field name="model">l10n.es.aeat.mod347.partner_record</field>
            <field name="inherit_id" ref="l10n_es_aeat_mod347.partner_record_search_view"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="before">
                    <field name="company_id" string="Company" groups="base.group_multi_company" />
                </field>
                <field name="partner_id" position="after">
                    <field name="report_identifier" string="Report identifier"/>
                    <field name="company_vat" string="Report VAT number"/>
                    <field name="fiscalyear_id" string="Fiscal year"/>
                    <field name="period_type" string="Period type"/>
                </field>
                <filter string="Operation key" position="before">
                    <filter string="Company" domain="[]" context="{'group_by' : 'company_id'}" groups="base.group_multi_company"/>
                    <filter string="Report identifier" domain="[]" context="{'group_by' : 'report_identifier'}"/>
                    <filter string="Report VAT number" domain="[]" context="{'group_by' : 'company_vat'}"/>
                    <filter string="Fiscal year" domain="[]" context="{'group_by' : 'fiscalyear_id'}"/>
                    <filter string="Period type" domain="[]" context="{'group_by' : 'period_type'}"/>
                    <filter string="Partner" domain="[]" context="{'group_by' : 'partner_id'}"/>
                </filter>
                <filter string="Operation key" position="after">
                    <filter string="Partner VAT" domain="[]" context="{'group_by' : 'partner_vat'}"/>
                </filter>
            </field>
        </record>
        <record model="ir.ui.view" id="view_l10n_es_aeat_mod347_report_form_inh_ext" >
            <field name="name">view.l10n.es.aeat.mod347.report.form.inh.ext</field>
            <field name="model">l10n.es.aeat.mod347.report</field>
            <field name="inherit_id" ref="l10n_es_aeat_mod347.view_l10n_es_aeat_mod347_report_form"/>
            <field name="arch" type="xml">
                <field name="partner_record_ids" position="before">
                   <button name="button_mass_mailing"
                           string="Mass mailing" type="object" />
                   <button name="button_mass_mailing_unanswered"
                           string="Resubmit to unanswered" type="object" />
                </field>
            </field>
        </record>
        <record id="l10n_es_aeat_mod347_partner_record_tree_view" model="ir.ui.view">
            <field name="name">l10n.es.aeat.mod347.partner_record.tree.view</field>
            <field name="model">l10n.es.aeat.mod347.partner_record</field>
            <field name="arch" type="xml">
                <tree string="Partner Records" colors="red:check_ok==False;" >
                    <field name="company_id" groups="base.group_multi_company" />
                    <field name="report_identifier" string="Report identifier"/>
                    <field name="company_vat" string="Report VAT number"/>
                    <field name="fiscalyear_id" string="Fiscal year"/>
                    <field name="period_type" string="Period type"/>
                    <field name="check_ok" invisible="1"/>
                    <field name="operation_key" />
                    <field name="partner_vat" />
                    <field name="partner_id" />
                    <field name="state" />
                    <field name="amount" />
                    <field name="insurance_operation" />
                    <field name="bussiness_real_estate_rent" />
                    <field name="cash_amount" />
                    <field name="real_estate_transmissions_amount" />
                </tree>
            </field>
        </record>
        <record id="action_l10n_es_aeat_mod347_partner_record" model="ir.actions.act_window">
            <field name="name">AEAT 347 model partner record</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n.es.aeat.mod347.partner_record</field>
            <field name="view_id" ref="l10n_es_aeat_mod347_ext.l10n_es_aeat_mod347_partner_record_tree_view"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="l10n_es_aeat_mod347_partner_record_option_view" name="AEAT 347 model partner record"
                  action="l10n_es_aeat_mod347_ext.action_l10n_es_aeat_mod347_partner_record" 
                  parent="l10n_es_aeat.menu_root_aeat" sequence="348"/>
    </data>
</openerp>
